<div class="col-lg-6 mx-auto mt-5 mb-5">
  <div class="card">
    <div class="card-header">
      <h2 class="text-center card-title">Forgot your password?</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: {turbo: false} }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "mb-2 mt-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "Send me reset password instructions", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>

    </div>
  </div>
</div>