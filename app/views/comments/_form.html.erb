<%= form_with(model: @comment, url: post_comments_path(post)) do |form| %>
  <div class="form-group row">
    <div class="col-lg-12">
      <%= form.label :comment, class:"mb-2 fw-bold" %>
      <%= form.text_area 'comment[content]', class: "form-control", placeholder: "Add your comment here" %>
    </div>
  </div>

  <% if !parent.nil? %>
    <%= form.hidden_field 'comment[parent_id]', value: parent.id %>
  <% end %>

  <div class="actions mt-2">
    <%= form.submit 'Comment', class: "btn btn-success" %>
  </div>
<% end %>
