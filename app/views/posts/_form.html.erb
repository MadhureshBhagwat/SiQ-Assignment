<%= form_with(model: post) do |form| %>
  <div class="col-lg-8 mx-auto mt-5 mb-5">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center card-title">New Post</h2>
      </div>
      <div class="card-body">
        <% if post.errors.any? %>
          <div class="error-area" style="color:red;">
            <h3><%= pluralize(post.errors.count, 'error') %> prohibited your post from being saved </h3>
            <ul>
              <% post.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group row">
          <div class="col-lg-6">
            <%= form.label :title, class:"mb-2 fw-bold" %>
            <%= form.text_field :title, class: "form-control", placeholder: "Add title here" %>
          </div>
          <div class="col-lg-12">
            <%= form.label :content, class:"mb-2 fw-bold" %>
            <%= form.text_area :content, class: "form-control", placeholder: "Add your content here" %>
          </div>
        </div>

        <div class="actions mt-4">
          <%= form.submit class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
<% end %>






