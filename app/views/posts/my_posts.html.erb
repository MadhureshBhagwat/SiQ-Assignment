<div class="col-lg-8 mx-auto mt-5 mb-5">
  <div class="card">
    <div class="card-header">
      <h2 class="text-center card-title">My Posts</h2>
      <div class="text-center">
        <%= link_to 'Create New Post', new_post_path, class: "btn btn-success mx-2" %>
        <%= link_to 'My Feed', root_path, class: "btn btn-success mx-2" %>
      </div>
    </div>
    <% @my_posts.each do |my_post| %>
      <div class="card-body">
        <ul class="list-group">
          <li class="list-group-item">
            <div class="row">
              <div class="col-lg-11">
                <div class="d-flex justify-content-start">
                  <h3 >Title : <span class="lead"><%= my_post.title %></span></h3>
                </div>
                <div class="d-flex justify-content-start">
                  <h3>Content : <span class="lead"><%= my_post.content %></span></h3>
                </div>
              </div>
              <div class="col-lg-1">
                <div class="d-flex justify-content-end">
                  <%= link_to edit_post_path(my_post) do %>
                    <i class="bi bi-pencil-fill"></i>
                  <% end %>
                  <%= link_to my_post, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete?' } do %>
                    <i class="bi bi-trash text-danger"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>

