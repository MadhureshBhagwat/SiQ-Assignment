<div class="card-body">
  <ul class="list-group">
    <li class="list-group-item">
      <div class="row">
        <div class="card-header">
          <div class="col-lg-12">
            <h4 class="card-title"><%= post.user.full_name(post.user_id) + " :" %></h4>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <h4 class="mt-3">Title : <span class="lead"><%= post.title %></span></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <h4>Content : <span class="lead"><%= post.content %></span></h4>
        </div>
      </div>
        <div class="row">
          <div class="col-lg-12">
            <% if post.comments.present? %>
              <h4>Comments : <p><%= render post.comments.where(parent_id: nil).includes(:user).order(id: :desc) %></p></h4>
            <% end %>
            <%= render partial: 'comments/form', locals: { post: post, parent: nil } %>
          </div>
        </div
    </li>
  </ul>
</div>

